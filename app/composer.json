{
    "name": "clovisphere/booky",
    "description": "A very basic book RESTful API example",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "authors": [
        {
            "name": "Clovis Mugaruka",
            "email": "clovis.mugaruka@gmail.com",
            "homepage": "https://clovisphere.giithub.io/"
        }
    ],
    "require": {
        "slim/slim": "^4.1",
        "illuminate/database": "~6.17",
        "slim/psr7": "^1.0",
        "ext-json": "*",
        "monolog/monolog": "^1.24",
        "php-di/php-di": "^6.0",
        "vlucas/phpdotenv": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": { "Booky\\": "src/Booky/"}
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
